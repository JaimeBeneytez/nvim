#############################################################

snippet for
	@for ($1 of $2; track $1) {
		$3
	} @empty {
		$4
	}
	$0

snippet if
	@if ($1) {
		$0
	}

snippet ife
	@if ($1) {
		$2
	} @else if($3) {
		$4
	}
	$0

snippet el
	@else {
		$0
	}

snippet eli
	@else if($1) {
		$0
	}

